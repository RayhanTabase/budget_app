<div class="">
  <h1>Create Transaction</h1>
  <div class="">
    <%= form_with model: transaction, url: transactions_new_path, method: :post, local: true, scope: :transaction do |f|%>
      <div>
        <%= f.label :name %><br>
        <%= f.text_field :name, required: true %>
      </div>
      
      <div>
        <%= f.label :amount %><br>
        <%= f.number_field :amount, value:0, min: 0, step: 0.1%>
      </div>
      
      <%= f.submit "Add Recipe" %>
    <% end %>
  </div>

  <% flash.each do |type, msg| %>
    <div>
      <%= msg %>
    </div>
  <% end %>
</div>